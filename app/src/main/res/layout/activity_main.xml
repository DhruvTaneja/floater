<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dcom.taneja.dhruv.floater.MainActivity">

    <Button
        android:id="@+id/buttonStartFloater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Floater"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStopFloater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonStopFloater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Floater"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@id/buttonStartFloater"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonStartFloater"/>

</android.support.constraint.ConstraintLayout>
